<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
            crossorigin="anonymous"
        />
        <title><%= title %></title>

        <script type="module" src="/app.js"></script>

    </head>
    <body>
        <div class="container">
            <% if (created) { %>
            <div class="alert alert-success">Note created</div>
            <% } %>
            <h1><%= title %></h1>
            <form action="/" method="post" class="mb-2">
                <div class="form-group mb-2">
                    <input
                        type="text"
                        name="title"
                        class="form-control"
                        id="note-title-input"
                        required
                    />
                </div>
                <button class="btn btn-primary" type="submit">create!</button>
            </form>
            <% if (notes.length) { %>
            <div class="card">
                <ul class="list-group">
                    <% notes.forEach(note => { %>
                    <li
                        class="list-group-item d-flex justify-content-between align-items-center"
                    >
                        <%= note.title %>
                        <div class="d-flex">
                        <button class="btn btn-primary me-2" data-type="edit" data-id=<%= note.id %> data-note=<%= note.title %> >Edit</button>
                        <button class="btn btn-sm btn-danger" data-type="remove" data-id=<%= note.id %> >&times;</button>
                        </div>
                    </li>
                    <% }) %>
                </ul>
            </div>
            <% } else { %>
            <p>No notes</p>
            <% } %>
        </div>
    </body>
</html>
